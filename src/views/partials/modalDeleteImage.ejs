<!-- Modal -->
<div class="modal fade" id="deleteModalImage<%= id %>" tabindex="-1" aria-labelledby="deleteModalImage<%= id %>Label"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-2" id="deleteModalImage<%= id %>Label">Advertencia</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h4 class="my-2 text-center">¿Estas seguro que querés eliminar el producto : <%= name %>?</h4>
                <div class="d-flex justify-content-end gap-2">
                </div>
                <div class="modal-footer">
                    <form action="/products/delete/<%= id %>?_method=DELETE" method="POST" class="gap-2" style="display: inline-flex">
                        <button type="button" class="btn btn-secondary fs-3" data-bs-dismiss="modal">Cancelar</button>
                        <button class="btn btn-danger fs-3" type="submit">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>