<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Editando: ' + name}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%= name %></i></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products/edit/<%= id%>?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="container-preview-img" >
					<img src="/images/products/<%= image %>" alt="">
					</div>
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" class="form-input" value="<%= name %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" class="form-input" value="<%= price %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" class="form-input" value="<%= discount %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="in-sale" <%= category === "in-sale" && 'selected' %>>En oferta</option>
							<option value="visited" <%= category === "visited" && 'selected' %>>Últimos agregados</option>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%= description %></textarea>
					</div>
					<div class="container-preview-img">
						<img src="/images/products/default-image.png" alt="">
					</div>
					<div class="col-12 mb-3 gap-2 w-100 d-flex justify-content-between">
						<label for="image" class="btn btn-success btn-lg fs-3">Editar imagen</label>
						<input type="file" id="image" name="image" class="d-none">
						<button type="submit" class="btn btn-primary btn-lg fs-3">Editar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>